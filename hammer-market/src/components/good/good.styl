.footer-line
  overflow-x: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-content: center;
  justify-content: space-between;
  background: #fff;
  height: 60px;
  padding: 0 .4%;
  z-index: 202;
  box-shadow: 0 -11px 27px rgba(0,0,0,.08);
  .cart-entry
    flex-shrink: 0;
    flex-basis: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    flex-grow: 1;
    margin: 0 .7%;
    .tag-img
      background-color: transparent;
      .tag
        position: absolute;
        box-sizing: border-box;
        top: -0.1667rem;
        height: 2.4rem;
        min-width: 2.4rem;
        line-height: 1.6;
        text-align: center;
        padding: 0 .783rem;
        border-radius: 1.2rem;
        background: #d44e45;
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        text-shadow: 0 -2px 0 rgba(0,0,0,.06);
        transform: scale(.33333);
        box-shadow: 0 3px 8px rgba(212,78,69,.4);
        transition: transform .3s ease-out
        -webkit-transform .3s ease-out;
        &:before
          content: "";
          box-sizing: border-box;
          border: 1px solid rgba(3,3,3,.04);
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          border-radius: 1.2rem;
          background: linear-gradient(0deg,rgba(0,0,0,.04),hsla(0,0%,100%,.04));
    .cart-img
      display: block;
      margin: .35rem auto;
      width: 1.35rem;
  .btn
    display: flex;
    align-items: center;
    justify-content: center;
    flex-basis: 100%;
    box-sizing: border-box;
    flex-grow: 1;
    flex-shrink: 1;
    margin: 0 .7%;
    position: relative;
    button
      width: 98%;
      height: 2.6rem;
      font-size: 1rem;
      font-weight: 700;
      border-radius: .5rem;
      display: flex;
      justify-content: center;
      align-items: center;
      

    .btn1
      background-image: linear-gradient(#fff,#fcfcfc);
      color: #8c8c8c;

    .btn2
      background-color #3f6aec
      color #fff

    


.footer-line
  &:after
    background: #dfdfdf;
    content: "";
    width: 100%;
    height: 1px;
    position: absolute;
    left: 0;
    right: 0;
    transform: scaleY(.667);

      



    
      

    

  
