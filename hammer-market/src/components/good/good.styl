  height 40px
  background #f2f2f2
  box-shadow 0 5px 13px rgba(0,0,0,.12)
  user-select none  
  .box-line
    width 25%
    text-align center
    line-height 1
    height 22px
    border 1px solid #e6e6e6
    padding-top 12px

