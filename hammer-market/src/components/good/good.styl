.title-bar
  background #1d1d1d
  background-image linear-gradient(#1d1d1d,#181818)
  height 50px
  position fixed
  top 0
  left 0
  right 0
  z-index 199
  .nav-back
    vertical-align middle
    left 2px
    background linear-gradient(#131313,#070707)
    color #fff
    border-radius 4px
    box-sizing border-box
    font-size 12px
    height 50px
    text-align center
    line-height 1
    position absolute
    top 50%
    transform translateY(-50%)
    text-decoration none
    display inline-block
    width 80px
    .icon-left
      text-align center
      vertical-align middle
      position relative
      left -25px
      top 17px
    .nav-text
      text-align center
      vertical-align middle
      line-height 1
      margin-top 2px
      padding-right 10px
  .nav-title
    color #fff
    font-size 15px
    line-height 20px
    margin -2px
    text-align center
    position absolute
    left 60px
    right 90px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

.my-bullet-active
  background: #000;
  opacity: 1;

.title-barbefore
  background linear-gradient(#000 50%,hsla(0,0%,100%,.1) 0)
  height 4px
  opacity .6
  top 0
  transform-origin center top
  content " "
  width 100%
  position absolute

.title-barafter
  content " "
  width 100%
  position absolute
  transform scaleY(.5)
  background rgba(0,0,0,.3)
  height 1px
  left 0
  bottom 0
  transform-origin center bottom

