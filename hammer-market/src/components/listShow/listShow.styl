 .bg-color
  width 100%
  height 10px
  background-color #e6e6e6

.floor-container
  display flex
  flex-wrap wrap
  width 100%
  box-sizing border-box
  padding-left 10px
  padding-right 10px
  .product-box-item
    width 50%
    height 235.16px
    .item-img
      height 150px
      width 100%
      img
        width 100%
        height 100%
        border 1px solid #f3f3f3
    .item-content
      margin 0 auto
      padding .4rem .6rem 1.3rem
      font-size 20.8333px
      h4
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        margin 0
        font-size .6rem
        color #333
      p
        margin-top .4rem
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        font-size .7rem
        line-height 1.3
        color #7f7f7f
        margin-bottom 10px
      .item-price
        color #d44d44
        display inline-block
        white-space nowrap
        font-weight 700
        font-size 16px
  
