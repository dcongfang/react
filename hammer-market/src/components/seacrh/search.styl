.btn-box input
  background-color: transparent;
  border: none;
  -webkit-appearance: none;
  display: block;
  width: 100%;
  border-radius 20px
  font-family: sans-serif;
  outline: none;
  overflow: visible;
  line-height: 1.15;

.hot-list
  overflow-y hidden
  position relative
  height 700px
  width 100%
  background: #f5f5f5
  padding-left 20px
  padding-right 20px
  z-index 202
  h4
    margin-top 20px
    margin-left 10px
    color: #8e8e8e;
    font-weight: 400;
  .his-btn
    margin-top 0
    height 256px
    margin-bottom 0
    width 100%
    padding-left 10px
    padding-right 10px
    display flex
    flex-wrap wrap
    .history
      height 40px
      margin-bottom 10px
      margin-left 10px
      margin-top 10px
      button 
        height 100%
        color: #000000
        font-size 13.5px
        line-height 1
        text-align center
        border-radius 10px
        background transparent

