.module-form-row-m
  top 0
  left 0
  right 0
  position fixed
  height 50px
  width 100%
  box-shadow: 0 1px 10px 0 rgba(0,0,0,.1);
  z-index: 205;
  background-color: #e6e6e6;
  .form-item
    padding: 10px;
    height 30px
    width 100%
    display flex
    .btn-box
      box-shadow: inset 0 0.05rem 5px rgba(0,0,0,.02), inset 0 2px 8px rgba(0,0,0,.15), inset 0 0 0 0.05rem rgba(0,0,0,.1), 0 0.05rem 0.05rem 0 hsla(0,0%,100%,.1);
      color: #333;
      margin-left 20px
      border-radius 20px
      position: relative;
      background-color #f5f5f5
      height 30px
      width 70%
      background-color: #fff;
      display flex
      .search-btn
        margin-left 10px
        width 25px
        height 25px
        position relative
        img
          margin-top 6px
      .input-box1
        height 30px
        flex 1
        font-size: 12px
    .cancel
      flex 1
      padding-right 10px
      height 30px
      margin-top 7px
      font-size 15px 
      text-align: center

