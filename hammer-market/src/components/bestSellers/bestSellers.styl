.best-seller
  color #666666
  height 39px
  width 100%
  border-bottom 1px solid #e6e6e6
  .title
    height 100%
    line-height 30px
    margin-left 10px
    float left
  .icon-right
    float right
    margin-right 10px
    text-align center
    width 25px
    height 25px
    margin-top 4px

.goods
  padding 20px 10px  
  height 200px
  display flex
  align-content center
  justify-content space-between
  flex-wrap nowrap
  z-index -1
  overflow-x auto  
  overflow-y hidden
  .good-item
    width 36%
    height 100%
    margin-right 5px
    .skip
      display block
      .mask
        width 100%
        height 126px
        border 1px solid #f0f0f0
    .content
      padding 8.33px 12.5px 18.75px
      width 100%
      position relative
      z-index -1
      margin-bottom 0
      box-sizing border-box
      h4
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        margin 0
        font-size .6rem
        color #333
      p
        transform scale(.83333)
        width 90%
        transform-origin 0 50% 
        margin-top .2rem
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        font-size .9rem
        line-height 1
        color #7f7f7f
        min-height .6rem
      .price
        position relative
        top -.15rem
        font-size .6rem
        line-height 1
        span
          color #d44d44
          display inline-block
          white-space nowrap
          font-weight 700


    
 
 .bg-color
  width 100%
  height 10px
