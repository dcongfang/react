.list
  width 100%
  height 704.1px
  .goodList
    display flex
    height 126px
    padding 5px 12.5px
    width 100%
    border 1px solid #f3f3f3
    .good-img
      height 100%
      width 126px
      margin-right 32.3px
      box-sizing border-box
    .content
      z-index -1
      position relative
      overflow hidden
      height 100%
      flex 1
      padding-right 30px
      font-size 20.8333px
      padding-top 10px
      padding-bottom 20px
      h5
        margin-top 10px
        margin-bottom 10px
        overflow hidden
        font-weight 700
        font-size .8rem
        color #333
        white-space nowrap
        text-overflow ellipsis
        display block
      p
        color #7f7f7f
        font-size .5rem
        line-height 1.2
        overflow-x hidden
        margin .3rem 0 0
        white-space nowrap
        text-overflow ellipsis
        display block
        margin-top 10px
        margin-bottom 10px
      .price
        font-size .6rem
        line-height 1
        color #d44d44
        display inline-block
        white-space nowrap
        font-weight 700
  .best-seller
    color #666666
    height 39px
    width 100%
    border-bottom 1px solid #e6e6e6
    .title
      height 100%
      line-height 30px
      margin-left 10px
      float left
    .icon-right
      float right
      margin-right 10px
      text-align center
      width 25px
      height 25px
      margin-top 4px
    
  .bg-color
    width 100%
    height 10px
 
