.empty-container
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  .img-container
    width: 88px;
    height: 114px;
    background-size: 88px auto;
    margin: 0 auto;
  h3
    color: rgba(0,0,0,.15);
    margin: 25px 0 9px;
    font-size: 1rem;
  p
    font-size: .65rem;
    text-align: center;
    color: rgba(0,0,0,.15);
  .buy-btn
    display: inline-block;
    width: 142px;
    height: 40px;
    line-height: 40px;
    font-size: .6rem;
    font-weight: 700;
    color: rgba(0,0,0,.6);
    margin: 16px 1px 0;
    background: linear-gradient(rgba(0,0,0,.01),hsla(0,0%,100%,.01));
    box-shadow: inset 0 2px 4px hsla(0,0%,100%,.3);
    text-decoration: none;
    position: relative;

.item-margin
  margin-top 114px

.cart-item
  display: flex;
  height: 114px;
  align-items: center;
  background #fff
  margin-bottom 5px
  .checkbox-container
    width: 44px;
    flex: 0 0 44px;
    text-align: center;
    line-height: 0;
  .item-wrapper
    display: flex;
    flex: 1;
    padding: 0 15px 0 0;
    overflow: hidden;
    align-items: center;
    .item-thumb
      width: 90px;
      height: 90px;
      flex: 0 0 90px;
      position: relative;
    .item-info-container
      flex: 1;
      margin-left: 13px;
      padding: 0 5px 0 0;
      position: relative;
      height: 90px;
      .colorful-tag-container
        max-height: 18px;
        position: relative;
        display: inline-block;
        padding: 0.2rem .53333rem;
        font-size: .8rem;
        font-weight: 700;
        border-radius: 1.2rem;
        z-index: 89;
        white-space: nowrap;
        color: #cc3e39;
        background: #ffe7e5;
        border-color: #f0948d;
      .item-info
        font-size: 10px
        margin-top 11px
        width 100%
        font-weight: 700
        margin-bottom 4px
      .item-price
        color: #d44d44;
        font-size: .6rem;
        font-weight: 700;
        margin-bottom 0
        margin-left 0
        margin-top: 16px;

.bottom-bar
  position: fixed;
  height: 50px;
  padding: 0 12px;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 90;
  background: #fafafa;
  box-shadow: 0 -0.2rem 1rem rgba(0,0,0,.1);
  font-size: 12px;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  bottom: 42px;
  .select-info
    height: 23px;
    width 100px
    display: flex;
    align-items: center;
    .checkbox-container
      margin-left 0
    p
      color: #999;
      margin-left: 8px;
      font-size: 12px
      span
        color:#d44d44
        font-size: 19px
        margin-left 4px
        margin-right 4px
        font-weight 700
  .sum-info
    width 96px
    height 34px
    font-size: 12px;
    color: #666;
    margin-right: 130px;
    .totalPrice
      margin-top 0
      width 100%
      height 30px
      margin-top: -10px;
      p
        display inline-block
        font-weight: bold;
      span
        color: #d44d44;
        font-size: 1rem;
        font-weight: 700;
    .desc
      width 100%
      margin-bottom 0
  .btn-disabled
    width 110px
    height 40px
    line-height: 40px;
    box-shadow: inset 0 -1px 1px rgba(0,0,0,.2), 0 0 1px rgba(0,0,0,.1), 0 1px 3px rgba(0,0,0,.2);
    font-size: 14px;
    border-radius: 6px;
    text-align: center;
    text-shadow: 0 -1px 0 rgba(0,0,0,.15);
    color: #fff;
    right: 11px;
    top: 50%;
    position: absolute;
    transform: translateY(-50%);
    font-weight: 700;
    button
      height: 100%;
      width: 100%;

