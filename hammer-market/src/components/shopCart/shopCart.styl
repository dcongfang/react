.receive-coupon
  margin-top: -64px;
  z-index 99
  position fixed
  background #ffe7e5
  color #d04f48
  height 62px
  display flex
  align-items center
  justify-content space-between
  padding-left .7rem
  padding-right .3rem
  width 100%
